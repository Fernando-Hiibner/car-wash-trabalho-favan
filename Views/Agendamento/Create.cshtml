@model CarWash.Models.AgendamentoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataDeAgendamento" class="control-label"></label>
                <input asp-for="DataDeAgendamento" class="form-control" />
                <span asp-validation-for="DataDeAgendamento" class="text-danger"></span>
                @if(ViewBag.Erro ?? false) {
                    <span class="text-danger">Um carro não pode ter dois serviços no mesmo dia.</span>
                }
            </div>
            <div class="form-group">
                <label asp-for="CarroId" class="control-label"></label>
                <select asp-for="CarroId" class ="form-control" asp-items="ViewBag.CarroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServicoId" class="control-label"></label>
                <select asp-for="ServicoId" class ="form-control" asp-items="ViewBag.ServicoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
